<% include ../partials/header %>

<div class="container">
  <header class="jumbotron">
    <div class="container">
      <h1>Welcome To Antiques Page</h1>
      <p>View our hand-picked antiques from all the world</p>
      <p>
        <a class="btn btn-primary btn-lg" href="/antiques/new"
          >Add New Antique</a
        >
      </p>
    </div>
  </header>

  <div class="row text-center" style="display:flex; flex-wrap:wrap">
    <% antiques.forEach(antique => { %>
    <div class="col-md-3 col-sm-6">
      <div class="thumbnail">
        <img src="<%= antique.image%>" />
      </div>
      <div class="caption">
        <h4><%= antique.name%></h4>
      </div>
      <p>
        <a href="/antiques/<%=antique._id %>" class="btn btn-primary"
          >More Info</a
        >
      </p>
    </div>
    <% }) %>
  </div>
</div>
<% include ../partials/footer %>
