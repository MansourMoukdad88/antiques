<% include ../partials/header %>
<div class="container">
  <div class="row">
    <h1 style="text-align: center">Edit <%= antique.name%></h1>
    <div style="width:30%; margin: 30px auto">
      <form action="/antiques/<%= antique._id %>?_method=PUT" method="POST">
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="antique[name]"
            value="<%=antique.name%>"
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="antique[image]"
            value="<%=antique.image%>"
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="antique[description]"
            value="<%=antique.description%>"
          />
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">Add Antique</button>
        </div>
      </form>
      <a href="/antiques">Go Back</a>
    </div>
  </div>
</div>

<% include ../partials/footer %>
