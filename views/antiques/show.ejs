<% include ../partials/header %>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <p class="lead">Antique</p>
      <div class="list-group">
        <li class="list-group-item active">Info 1 for Product</li>
        <li class="list-group-item">Info 2 for Buyer</li>
        <li class="list-group-item">Info 3 for ......</li>
      </div>
    </div>
    <div class="col-md-9">
      <div class="thumbnail">
        <img class="img-responsive" src="<%= antique.image %>" />
        <div class="caption-full">
          <h4 class="pull-right">$98.99</h4>
          <h4><a href=""><%= antique.name %></a></h4>
          <p></p>
          <p><%= antique.description %></p>
        </div>
      </div>
      <div class="well">
        <div class="text-right">
          <a
            class="btn btn-success"
            href="/antiques/<%= antique._id %>/comments/new"
            >Add New Comment</a
          >
        </div>
        <hr />
        <% antique.comments.forEach(comment => { %>
        <div class="row">
          <div class="col-md-12">
            <strong><%= comment.author.username%></strong>
            <span class="pull-right">10 days ago</span>
            <p>
              <%= comment.text%>
            </p>
          </div>
        </div>
        <% }) %> <% include ../partials/footer %>
      </div>
    </div>
  </div>
</div>
