<% include ../partials/header %>

<h1><%= antique.name %></h1>

<img src="<%= antique.image %>" />
<p><%= antique.description %></p>

<p>
  <a class="btn btn-success" href="/antiques/<%= antique._id %>/comments/new">Add New Comment</a>
</p>


<% antique.comments.forEach(comment => { %>
<p>
  <strong>
    <%= comment.author%>
  </strong>
  - <%= comment.text%>
</p>
<% }) %> <% include ../partials/footer %>
